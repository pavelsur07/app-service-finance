{% extends 'base.html.twig' %}

{% block breadcrumbs %}
    {% include 'partials/_breadcrumbs.html.twig' with {
        breadcrumbs: [
            {'label': 'Главная', 'path': 'app_home_index'},
            {'label': 'Финансы'},
            {'label': 'Остатки и счета (структура)', 'path': 'report_account_balances_structured_index'}
        ]
    } %}
{% endblock %}

{% block content %}
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="page-title mb-0">Остатки и счета (структура)</h2>
    </div>

    <form method="get" class="card mb-4">
        <div class="card-body">
            <div class="row g-3 align-items-stretch">
                <div class="col-12 col-md-3 col-lg-2">
                    <div class="d-flex flex-column gap-2 h-100">
                        <a href="#" class="btn btn-outline-secondary disabled w-100">Сохранить текущий фильтр</a>
                        <a href="{{ path('report_account_balances_structured_index') }}" class="btn btn-link text-start w-100">Очистить фильтры</a>
                    </div>
                </div>
                <div class="col-12 col-md-9 col-lg-10">
                    <div class="row g-3 align-items-end">
                        <div class="col-12 col-sm-6 col-md-3 col-lg-2">
                            <label class="form-label mb-1">Дата отчёта с</label>
                            <input type="date" name="from" value="{{ from|date('Y-m-d') }}" class="form-control" />
                        </div>
                        <div class="col-12 col-sm-6 col-md-3 col-lg-2">
                            <label class="form-label mb-1">Дата отчёта по</label>
                            <input type="date" name="to" value="{{ to|date('Y-m-d') }}" class="form-control" />
                        </div>
                        <div class="col-12 col-sm-6 col-md-3 col-lg-2">
                            <label class="form-label mb-1">Дата транзакции</label>
                            <select class="form-select" name="transactionDate">
                                <option value="report">По дате отчёта</option>
                            </select>
                        </div>
                        <div class="col-12 col-md-6 col-lg-3">
                            <label class="form-label mb-1">Кассы</label>
                            <div class="d-flex flex-column gap-2">
                                <select name="accounts[]" class="form-select" multiple style="max-height: 200px; overflow-y: auto;">
                                    {% for account in accountsForFilter %}
                                        <option value="{{ account.id }}" {% if account.id in selectedAccountIds %}selected{% endif %}>
                                            {{ account.name }} ({{ account.currency }})
                                        </option>
                                    {% endfor %}
                                </select>
                                <div class="form-check mb-0">
                                    <input class="form-check-input" type="checkbox" value="1" id="excludeCheckbox" name="exclude" {% if excludeSelected %}checked{% endif %} />
                                    <label class="form-check-label" for="excludeCheckbox">Исключить выбранные</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-sm-6 col-md-3 col-lg-2">
                            <div class="form-check mb-0">
                                <input class="form-check-input" type="checkbox" value="1" id="hideZeroCheckbox" name="hideZero"{% if hideZero %}checked{% endif %} />
                                <label class="form-check-label" for="hideZeroCheckbox">Скрывать нулевые строки</label>
                            </div>
                        </div>
                        <div class="col-auto ms-auto">
                            <button type="submit" class="btn btn-primary">Показать</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>

    {% if rowsByCurrency is empty %}
        <div class="alert alert-info">Нет данных для отображения.</div>
    {% else %}
        <div class="card">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0 align-middle">
                    <thead>
                        <tr>
                            <th class="text-center" style="width: 50px;">#</th>
                            <th>Счёт</th>
                            <th>Валюта</th>
                            <th>Период</th>
                            <th class="text-end">На начало</th>
                            <th class="text-end">Поступление</th>
                            <th class="text-end">Расход</th>
                            <th class="text-end">На конец</th>
                            <th>Тип</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for currency, rows in rowsByCurrency %}
                            <tr class="table-light">
                                <td colspan="9" class="fw-bold">Валюта: {{ currency }}</td>
                            </tr>
                            <tr class="fw-bold">
                                <td></td>
                                <td>Всего</td>
                                <td>{{ currency }}</td>
                                <td></td>
                                <td class="text-end">{{ rows.total.opening|number_format(2, '.', ' ') }}</td>
                                <td class="text-end">{{ rows.total.inflow|number_format(2, '.', ' ') }}</td>
                                <td class="text-end">{{ rows.total.outflow|number_format(2, '.', ' ') }}</td>
                                <td class="text-end">{{ rows.total.closing|number_format(2, '.', ' ') }}</td>
                                <td></td>
                            </tr>
                            {% set rowIndex = 1 %}
                            {% for row in rows.accounts %}
                                <tr>
                                    <td class="text-center">{{ rowIndex }}</td>
                                    <td>{{ row.name }}</td>
                                    <td>{{ row.currency }}</td>
                                    <td>{{ from|date('d.m.Y') }} – {{ to|date('d.m.Y') }}</td>
                                    <td class="text-end">{{ row.opening|number_format(2, '.', ' ') }}</td>
                                    <td class="text-end">{{ row.inflow|number_format(2, '.', ' ') }}</td>
                                    <td class="text-end">{{ row.outflow|number_format(2, '.', ' ') }}</td>
                                    <td class="text-end">{{ row.closing|number_format(2, '.', ' ') }}</td>
                                    <td>{{ row.type ?? '' }}</td>
                                </tr>
                                {% set rowIndex = rowIndex + 1 %}
                            {% endfor %}
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endif %}
{% endblock %}
