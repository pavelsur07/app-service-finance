{% extends 'base.html.twig' %}

{% block breadcrumbs %}
    {% include 'partials/_breadcrumbs.html.twig' with {
        breadcrumbs: [
            {'label': 'Главная', 'path': 'app_home_index'},
            {'label': 'Финансы'},
            {'label': 'Остатки и счета (структура)', 'path': 'report_account_balances_structured_index'}
        ]
    } %}
{% endblock %}

{% block content %}
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="page-title mb-0">Остатки и счета</h2>
    </div>

    <form method="get" class="card mb-4">
        <div class="card-body">
            <div class="row g-3 align-items-end">
                <div class="col-12 col-md-6 col-lg-4">
                    <label class="form-label mb-1">Дата отчёта</label>
                    <div class="d-flex gap-2">
                        <input type="date" name="from" value="{{ from|date('Y-m-d') }}" class="form-control" />
                        <input type="date" name="to" value="{{ to|date('Y-m-d') }}" class="form-control" />
                    </div>
                </div>
                <div class="col-auto ms-auto align-self-end">
                    <button type="submit" class="btn btn-primary">Показать</button>
                </div>
            </div>
        </div>
    </form>

    {% set hasAccountRows = false %}
    {% for currency, rows in rowsByCurrency %}
        {% if rows.accounts is defined and rows.accounts|length > 0 %}
            {% set hasAccountRows = true %}
        {% endif %}
    {% endfor %}

    {% if rowsByCurrency is empty or not hasAccountRows %}
        <div class="alert alert-warning">
            Нет данных за выбранный период.
        </div>
    {% else %}
        <div class="card">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0 align-middle">
                    <thead>
                        <tr>
                            <th class="text-center" style="width: 50px;">#</th>
                            <th>Счёт</th>
                            <th>Валюта</th>
                            <th class="text-end">На начало</th>
                            <th class="text-end">Поступление</th>
                            <th class="text-end">Расход</th>
                            <th class="text-end">На конец</th>
                            <th>Тип</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for currency, rows in rowsByCurrency %}
                            <tr class="table-light">
                                <td colspan="8" class="fw-bold">Валюта: {{ currency }}</td>
                            </tr>
                            <tr class="fw-bold">
                                <td></td>
                                <td>Всего</td>
                                <td>{{ currency }}</td>
                                <td class="text-end">{{ rows.total.opening|number_format(2, '.', ' ') }}</td>
                                <td class="text-end">{{ rows.total.inflow|number_format(2, '.', ' ') }}</td>
                                <td class="text-end">{{ rows.total.outflow|number_format(2, '.', ' ') }}</td>
                                <td class="text-end">{{ rows.total.closing|number_format(2, '.', ' ') }}</td>
                                <td></td>
                            </tr>
                            {% set rowIndex = 1 %}
                            {% for row in rows.accounts %}
                                <tr>
                                    <td class="text-center">{{ rowIndex }}</td>
                                    <td>{{ row.name }}</td>
                                    <td>{{ row.currency }}</td>
                                    <td class="text-end">{{ row.opening|number_format(2, '.', ' ') }}</td>
                                    <td class="text-end">{{ row.inflow|number_format(2, '.', ' ') }}</td>
                                    <td class="text-end">{{ row.outflow|number_format(2, '.', ' ') }}</td>
                                    <td class="text-end">{{ row.closing|number_format(2, '.', ' ') }}</td>
                                    <td>{{ row.type ?? '' }}</td>
                                </tr>
                                {% set rowIndex = rowIndex + 1 %}
                            {% endfor %}
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endif %}
{% endblock %}
