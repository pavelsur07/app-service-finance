{% extends 'base.html.twig' %}

{% block breadcrumbs %}
    {% include 'partials/_breadcrumbs.html.twig' with {
        breadcrumbs: [
            {'label': 'Главная', 'path': 'app_home_index'},
            {'label': 'Финансы'},
            {'label': 'Остатки и счета (структура)', 'path': 'report_account_balances_structured_index'}
        ]
    } %}
{% endblock %}

{% block content %}
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="page-title mb-0">Остатки и счета (структура)</h2>
    </div>

    <form method="get" class="row g-2 mb-3">
        <div class="col-auto">
            <label class="form-label mb-1">Дата с</label>
            <input type="date" name="from" value="{{ from|date('Y-m-d') }}" class="form-control" />
        </div>
        <div class="col-auto">
            <label class="form-label mb-1">Дата по</label>
            <input type="date" name="to" value="{{ to|date('Y-m-d') }}" class="form-control" />
        </div>
        <div class="col-12 col-md-auto">
            <label class="form-label mb-1">Счета</label>
            <select name="accounts[]" class="form-select" multiple size="5">
                {% for account in accountsForFilter %}
                    <option value="{{ account.id }}" {% if account.id in selectedAccountIds %}selected{% endif %}>
                        {{ account.name }} ({{ account.currency }})
                    </option>
                {% endfor %}
            </select>
            <div class="form-check mt-1">
                <input class="form-check-input" type="checkbox" value="1" id="excludeCheckbox" name="exclude" {% if excludeSelected %}checked{% endif %} />
                <label class="form-check-label" for="excludeCheckbox">Исключить выбранные</label>
            </div>
        </div>
        <div class="col-12 col-md-auto align-self-end pb-2">
            <div class="form-check mb-2">
                <input class="form-check-input" type="checkbox" value="1" id="hideZeroCheckbox" name="hideZero" {% if hideZero %}checked{% endif %} />
                <label class="form-check-label" for="hideZeroCheckbox">Скрывать нулевые строки</label>
            </div>
            <button type="submit" class="btn btn-primary">Показать</button>
        </div>
    </form>

    {% if rowsByCurrency is empty %}
        <div class="alert alert-info">Нет данных для отображения.</div>
    {% endif %}

    {% for currency, rows in rowsByCurrency %}
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="card-title mb-0">Валюта: {{ currency }}</h3>
                <div class="text-muted">
                    Период: {{ from|date('d.m.Y') }} — {{ to|date('d.m.Y') }}
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Счет</th>
                            <th class="text-end">Открытие</th>
                            <th class="text-end">Приход</th>
                            <th class="text-end">Расход</th>
                            <th class="text-end">Закрытие</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for row in rows.accounts %}
                            <tr>
                                <td>{{ row.account.name }}</td>
                                <td class="text-end">{{ row.opening|number_format(2, '.', ' ') }}</td>
                                <td class="text-end">{{ row.inflow|number_format(2, '.', ' ') }}</td>
                                <td class="text-end">{{ row.outflow|number_format(2, '.', ' ') }}</td>
                                <td class="text-end">{{ row.closing|number_format(2, '.', ' ') }}</td>
                            </tr>
                        {% endfor %}
                        <tr class="fw-bold">
                            <td>Всего</td>
                            <td class="text-end">{{ rows.total.opening|number_format(2, '.', ' ') }}</td>
                            <td class="text-end">{{ rows.total.inflow|number_format(2, '.', ' ') }}</td>
                            <td class="text-end">{{ rows.total.outflow|number_format(2, '.', ' ') }}</td>
                            <td class="text-end">{{ rows.total.closing|number_format(2, '.', ' ') }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    {% endfor %}
{% endblock %}
