<header class="navbar navbar-expand-md d-none d-lg-flex d-print-none">
    <div class="container-fluid">
        <div class="d-flex align-items-center gap-3 w-100">
            <div class="d-none d-md-flex flex-column">
                <div class="fw-bold">{% block page_title %}Дашборд{% endblock %}</div>
                <div class="page-title-muted">{% block page_subtitle %}Сводка денег • прогноз • риски{% endblock %}</div>
            </div>

            <div class="ms-auto d-flex align-items-center gap-2">
                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="ti ti-building me-2"></i>{% block company_label %}Активная компания{% endblock %}
                    </button>
                    <div class="dropdown-menu dropdown-menu-end">
                        {% block company_dropdown %}
                            <a class="dropdown-item" href="javascript:void(0)">ООО Ромашка</a>
                            <a class="dropdown-item" href="javascript:void(0)">ИП Иванов</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="javascript:void(0)"><i class="ti ti-plus me-2"></i>Добавить компанию</a>
                        {% endblock %}
                    </div>
                </div>

                <button class="btn btn-outline-secondary btn-icon" data-bs-toggle="offcanvas" data-bs-target="#offcanvasFilters" aria-label="Filters">
                    <i class="ti ti-filter"></i>
                </button>

                <button class="btn btn-primary">
                    <i class="ti ti-plus me-2"></i>Добавить операцию
                </button>
            </div>
        </div>
    </div>
</header>
