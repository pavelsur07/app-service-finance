{% extends 'base.html.twig' %}

{% block title %}Edit Account{% endblock %}

{% block body %}
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">Edit Money Account</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="container-xl mt-3">
        {{ form_start(form) }}
        <div class="card">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs" data-bs-toggle="tabs">
                    <li class="nav-item">
                        <a href="#tab-main" class="nav-link active" data-bs-toggle="tab">Основное</a>
                    </li>
                    <li class="nav-item">
                        <a href="#tab-integration" class="nav-link" data-bs-toggle="tab">Интеграция</a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                {{ form_errors(form) }}
                <div class="tab-content">
                    <div class="tab-pane active show" id="tab-main">
                        <div class="row g-3">
                            <div class="col-md-4">
                                {{ form_row(form.name) }}
                            </div>
                            <div class="col-md-4">
                                {{ form_row(form.type) }}
                            </div>
                            <div class="col-md-4">
                                {{ form_row(form.currency) }}
                            </div>
                        </div>
                        <div class="row g-3">
                            <div class="col-md-4">
                                {{ form_row(form.openingBalance) }}
                            </div>
                            <div class="col-md-4">
                                {{ form_row(form.openingBalanceDate) }}
                            </div>
                            <div class="col-md-4">
                                {{ form_row(form.isDefault) }}
                            </div>
                        </div>
                        {{ form_row(form.bankName) }}
                        {{ form_row(form.accountNumber) }}
                        {{ form_row(form.iban) }}
                        {{ form_row(form.bic) }}
                        {{ form_row(form.corrAccount) }}
                        {{ form_row(form.location) }}
                        {{ form_row(form.responsiblePerson) }}
                        {{ form_row(form.provider) }}
                        {{ form_row(form.walletId) }}
                        {{ form_rest(form) }}
                    </div>
                    <div class="tab-pane" id="tab-integration">
                        <div class="mb-3">
                            <label for="bank_provider" class="form-label">Провайдер</label>
                            <select class="form-select" id="bank_provider" name="bank_provider">
                                <option value="" {% if bankIntegration.provider is empty %}selected{% endif %}>Не выбрано</option>
                                <option value="demo" {% if bankIntegration.provider == 'demo' %}selected{% endif %}>demo</option>
                                <option value="alfa" {% if bankIntegration.provider == 'alfa' %}selected{% endif %}>alfa</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="bank_external_account_id" class="form-label">Внешний ID счёта</label>
                            <input type="text" class="form-control" id="bank_external_account_id" name="bank_external_account_id" value="{{ bankIntegration.external_account_id }}">
                        </div>
                        <div class="mb-3">
                            <label for="bank_number" class="form-label">Отображаемый номер</label>
                            <input type="text" class="form-control" id="bank_number" name="bank_number" value="{{ bankIntegration.number }}">
                        </div>
                        <div class="mb-3">
                            <label for="bank_auth" class="form-label">Auth (JSON)</label>
                            <textarea class="form-control" id="bank_auth" name="bank_auth" rows="6" placeholder='{"token":"..."}'>{{ bankIntegration.auth }}</textarea>
                            <small class="form-hint">Укажите данные авторизации в формате JSON.</small>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="mb-3">
                                    <label class="form-label">Текущий cursor.sinceId (только для отображения)</label>
                                    <input type="text" class="form-control" value="{{ bankCursor.sinceId ?? '' }}" disabled>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="mb-3">
                                    <label class="form-label">Текущий cursor.sinceDate (только для отображения)</label>
                                    <input type="text" class="form-control" value="{{ bankCursor.sinceDate ?? '' }}" disabled>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" name="clear_bank_link" value="1" class="btn btn-outline-danger" formnovalidate>
                                Очистить привязку
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer text-end">
                <button class="btn btn-primary">Сохранить</button>
            </div>
        </div>
        {{ form_end(form, { render_rest: false }) }}
    </div>
{% endblock %}
