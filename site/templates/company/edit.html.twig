{% extends 'base.html.twig' %}
{% block title %}{{ company is defined ? 'Редактировать' : 'Добавить' }} компанию{% endblock %}
{% block body %}
    <div class="container-xl mt-3">
        <div class="card">
            <div class="card-header"><b>{{ company is defined ? 'Редактировать' : 'Добавить' }} компанию</b></div>
            <div class="card-body">
                {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.name) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.inn) }}
                    {{ form_widget(form.inn, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.inn) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.wildberriesApiKey) }}
                    {{ form_widget(form.wildberriesApiKey, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.wildberriesApiKey) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.ozonSellerId) }}
                    {{ form_widget(form.ozonSellerId, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.ozonSellerId) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.ozonApiKey) }}
                    {{ form_widget(form.ozonApiKey, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.ozonApiKey) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.taxSystem) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.financeLockBefore) }}
                </div>
                <button class="btn btn-primary">{{ company is defined ? 'Сохранить' : 'Создать' }}</button>
                <a href="{{ path('company_index') }}" class="btn btn-secondary">Назад</a>
                {{ form_end(form) }}

                {# Отдельная форма для проверки ключа Wildberries — только для уже существующей компании #}
                {% if company is defined %}
                    <form method="post"
                          action="{{ path('company_check_wb_key', {'id': company.id}) }}"
                          class="d-inline-block mt-3">
                        <input type="hidden" name="_token" value="{{ csrf_token('company_check_wb_key' ~ company.id) }}">
                        <button type="submit" class="btn btn-outline-primary btn-sm">
                            Проверить ключ Wildberries
                        </button>
                    </form>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
