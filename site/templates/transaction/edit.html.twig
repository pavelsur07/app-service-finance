{% extends 'base.html.twig' %}
{% block title %}Редактирование транзакции{% endblock %}

{% block breadcrumbs %}
    {% include 'partials/_breadcrumbs.html.twig' with {
        breadcrumbs: [
            {'label':'Главная','path':'app_home_index'},
            {'label':'Финансы'},
            {'label':'Транзакции','path':'cash_transaction_index','params': app.request.query.all},
            {'label':'Редактирование'}
        ]
    } %}
{% endblock %}

{% block content %}
    <div class="d-flex align-items-center justify-content-between gap-3 mb-3">
        <h2 class="page-title mb-0">Редактирование транзакции</h2>
        {% if canCreatePnlDocument %}
            <form method="post" action="{{ path('cash_transaction_create_pnl_document', {id: tx.id}) }}" class="d-inline">
                <input type="hidden" name="_token" value="{{ csrf_token('create_pnl_document' ~ tx.id) }}">
                <button type="submit" class="btn btn-primary">Создать документ ОПиУ</button>
            </form>
        {% endif %}
    </div>
    {{ include('transaction/_form.html.twig') }}
    <div class="card mt-3">
        <div class="card-header">
            <div class="card-title mb-0">Документы ОПиУ на основании транзакции</div>
        </div>
        <div class="card-body">
            {% if pnlDocuments is not empty %}
                <div class="table-responsive">
                    <table class="table card-table align-middle">
                        <thead>
                            <tr>
                                <th class="text-nowrap">Номер / дата</th>
                                <th>Описание</th>
                                <th class="text-end text-nowrap">Сумма</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for document in pnlDocuments %}
                                <tr>
                                    <td class="text-nowrap">
                                        <div class="fw-semibold">{{ document.number ?: '—' }}</div>
                                        <div class="text-muted">{{ document.date|date('d.m.Y') }}</div>
                                    </td>
                                    <td>
                                        <div class="fw-semibold">{{ document.counterparty ? document.counterparty.name : '—' }}</div>
                                        <div class="text-muted">{{ document.description ?: '—' }}</div>
                                    </td>
                                    <td class="text-end fw-semibold">{{ document.totalAmount|number_format(2, ',', ' ') }}</td>
                                    <td class="text-end">
                                        <a href="{{ path('document_show', {id: document.id}) }}" class="btn btn-link">Открыть</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <p class="text-muted mb-0">Документы ОПиУ на основании этой транзакции ещё не созданы.</p>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script>
        const acc = document.querySelector('#form_moneyAccount');
        const cur = document.querySelector('#form_currency');
        if (acc && cur) {
            acc.addEventListener('change', e => {
                const opt = acc.options[acc.selectedIndex];
                cur.value = opt.dataset.currency || '';
            });
            const initOpt = acc.options[acc.selectedIndex];
            cur.value = initOpt ? initOpt.dataset.currency : '';
        }
    </script>
{% endblock %}

