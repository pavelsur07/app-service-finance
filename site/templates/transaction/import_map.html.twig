{% extends 'base.html.twig' %}
{% block title %}Сопоставление колонок{% endblock %}

{% block breadcrumbs %}
    {% include 'partials/_breadcrumbs.html.twig' with {
        breadcrumbs: [
            {'label':'Главная','path':'app_home_index'},
            {'label':'Финансы'},
            {'label':'Транзакции','path':'cash_transaction_index'},
            {'label':'Импорт','path':'cash_transaction_import_upload'},
            {'label':'Сопоставление'}
        ]
    } %}
{% endblock %}

{% block content %}
    <h2 class="page-title mb-3">Сопоставление колонок</h2>
    {{ form_start(form) }}
        {{ form_row(form.account) }}
        {{ form_row(form.date) }}
        {{ form_row(form.description) }}
        {{ form_row(form.amount) }}
        <button class="btn btn-primary">Импортировать</button>
    {{ form_end(form) }}
{% endblock %}
