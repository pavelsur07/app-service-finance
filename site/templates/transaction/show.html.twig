{% extends 'base.html.twig' %}
{% block title %}Просмотр транзакции{% endblock %}

{% block breadcrumbs %}
    {% include 'partials/_breadcrumbs.html.twig' with {
        breadcrumbs: [
            {'label':'Главная','path':'app_home_index'},
            {'label':'Финансы'},
            {'label':'Транзакции','path':'cash_transaction_index'},
            {'label':'Просмотр'}
        ]
    } %}
{% endblock %}

{% block content %}
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-md-3">Дата</dt><dd class="col-md-9">{{ tx.occurredAt|date('d.m.Y') }}</dd>
            <dt class="col-md-3">Счет</dt><dd class="col-md-9">{{ tx.moneyAccount.name }}</dd>
            <dt class="col-md-3">Направление</dt><dd class="col-md-9"><span class="badge bg-{{ tx.direction == 'INFLOW' ? 'success' : 'danger' }}">{{ tx.direction == 'INFLOW' ? 'Приток' : 'Отток' }}</span></dd>
            <dt class="col-md-3">Сумма</dt><dd class="col-md-9 text-end">{{ tx.amount|number_format(2, ',', ' ') }} {{ tx.currency }}</dd>
            <dt class="col-md-3">Статья</dt>
            <dd class="col-md-9">
                {% set chain = [] %}
                {% set c = tx.cashflowCategory %}
                {% for i in 0..10 %}
                    {% if c %}
                        {% set chain = [c.name]|merge(chain) %}
                        {% set c = c.parent %}
                    {% endif %}
                {% endfor %}
                {{ chain|join(' / ') }}
            </dd>
            <dt class="col-md-3">Контрагент</dt><dd class="col-md-9">{{ tx.counterparty ? tx.counterparty.name : '' }}</dd>
            <dt class="col-md-3">Описание</dt><dd class="col-md-9">{{ tx.description }}</dd>
        </dl>
    </div>
    <div class="card-footer text-end">
        {% if canCreatePnlDocument %}
            <form method="post" action="{{ path('cash_transaction_create_pnl_document', {id: tx.id}) }}" class="d-inline">
                <input type="hidden" name="_token" value="{{ csrf_token('create_pnl_document' ~ tx.id) }}">
                <button type="submit" class="btn btn-primary me-2">Создать документ ОПиУ</button>
            </form>
        {% endif %}
        <a href="{{ path('cash_transaction_edit', {id: tx.id}) }}" class="btn btn-icon btn-warning" title="Редактировать" aria-label="Редактировать">
            <i class="ti ti-pencil"></i>
            <span class="visually-hidden">Редактировать</span>
        </a>
        <button class="btn btn-icon btn-danger"
                data-bs-toggle="modal"
                data-bs-target="#delete-modal-{{ tx.id }}"
                title="Удалить"
                aria-label="Удалить">
            <i class="ti ti-trash"></i>
            <span class="visually-hidden">Удалить</span>
        </button>
        <a href="{{ path('cash_transaction_index') }}" class="btn btn-secondary">Назад к списку</a>
    </div>
</div>
<div class="card mt-3">
    <div class="card-header">
        <div class="card-title mb-0">Документы ОПиУ на основании транзакции</div>
    </div>
    <div class="card-body">
        {% if pnlDocuments is not empty %}
            <div class="table-responsive">
                <table class="table card-table align-middle">
                    <thead>
                        <tr>
                            <th class="text-nowrap">Номер / дата</th>
                            <th>Описание</th>
                            <th class="text-end text-nowrap">Сумма</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for document in pnlDocuments %}
                            <tr>
                                <td class="text-nowrap">
                                    <div class="fw-semibold">{{ document.number ?: '—' }}</div>
                                    <div class="text-muted">{{ document.date|date('d.m.Y') }}</div>
                                </td>
                                <td>
                                    <div class="fw-semibold">{{ document.counterparty ? document.counterparty.name : '—' }}</div>
                                    <div class="text-muted">{{ document.description ?: '—' }}</div>
                                </td>
                                <td class="text-end fw-semibold">{{ document.totalAmount|number_format(2, ',', ' ') }}</td>
                                <td class="text-end">
                                    <a href="{{ path('document_show', {id: document.id}) }}" class="btn btn-link">Открыть</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <p class="text-muted mb-0">Документы ОПиУ на основании этой транзакции ещё не созданы.</p>
        {% endif %}
    </div>
</div>
{{ include('transaction/_delete_modal.html.twig', {tx: tx}) }}
{% endblock %}

