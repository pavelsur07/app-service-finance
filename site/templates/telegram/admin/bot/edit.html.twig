{% extends 'admin/base.html.twig' %}

{% block title %}Редактирование Telegram-бота{% endblock %}

{% block body %}
  <div class="page-header d-print-none">
    <div class="row align-items-center">
      <div class="col">
        <h2 class="page-title">Редактирование бота</h2>
        <p class="text-muted mb-0">{{ bot.username ?? 'Без username' }}</p>
      </div>
    </div>
  </div>

  <div class="card mt-3">
    <div class="card-body">
      {{ form_start(form) }}
        <div class="row g-3">
          <div class="col-md-6">
            {{ form_row(form.token) }}
          </div>
          <div class="col-md-6">
            {{ form_row(form.username) }}
          </div>
          <div class="col-md-12">
            {{ form_row(form.webhookUrl) }}
          </div>
          <div class="col-md-12">
            {{ form_row(form.isActive) }}
          </div>
        </div>
        <div class="mt-3 d-flex gap-2">
          {{ form_row(form.save) }}
          <a href="{{ path('admin_telegram_bot_index') }}" class="btn btn-outline-secondary">Отмена</a>
        </div>
      {{ form_end(form) }}
    </div>
  </div>
{% endblock %}
