{% extends 'admin/base.html.twig' %}

{% block title %}Ссылки привязки{% endblock %}

{% block body %}
  <div class="page-header d-print-none">
    <div class="row align-items-center">
      <div class="col">
        <h2 class="page-title">Ссылки привязки</h2>
        <p class="text-muted mb-0">Deeplink для связи Telegram-пользователя с компанией</p>
      </div>
      <div class="col-auto ms-auto d-print-none">
        <a href="{{ path('admin_telegram_link_new') }}" class="btn btn-primary">+ Создать ссылку</a>
      </div>
    </div>
  </div>

  <div class="card mt-3">
    <div class="card-body">
      {% if links is empty %}
        <div class="alert alert-info mb-0">Ссылок пока нет. Нажмите «Создать ссылку», чтобы добавить первую.</div>
      {% else %}
        <div class="table-responsive">
          <table class="table table-vcenter">
            <thead>
            <tr>
              <th>Бот</th>
              <th>Scope</th>
              <th>Действует до</th>
              <th>Использована</th>
              <th>Создана</th>
            </tr>
            </thead>
            <tbody>
            {% for link in links %}
              <tr>
                <td>{{ link.bot.username ?? '—' }}</td>
                <td><span class="badge bg-primary-lt">{{ link.scope }}</span></td>
                <td>{{ link.expiresAt|date('d.m.Y H:i') }}</td>
                <td>
                  {% if link.usedAt %}
                    {{ link.usedAt|date('d.m.Y H:i') }}
                  {% else %}
                    <span class="text-muted">ещё не использована</span>
                  {% endif %}
                </td>
                <td>{{ link.createdAt|date('d.m.Y H:i') }}</td>
              </tr>
            {% endfor %}
            </tbody>
          </table>
        </div>
      {% endif %}
    </div>
  </div>
{% endblock %}
