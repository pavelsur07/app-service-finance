{% extends 'base.html.twig' %}

{% block title %}Платёжный календарь{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .table-sticky-head thead th {
            position: sticky;
            top: 0;
            z-index: 1;
            background: var(--tblr-bg-surface);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">Платёжный календарь</h2>
                    <div class="text-secondary">
                        {% if period %}
                            Период: {{ period.from|date('d.m.Y') }} — {{ period.to|date('d.m.Y') }}
                        {% else %}
                            Укажите период, чтобы увидеть прогноз поступлений и платежей
                        {% endif %}
                    </div>
                </div>
                <div class="col-auto ms-auto d-print-none">
                    <div class="btn-list">
                        <div class="btn-group" role="group" aria-label="View switch">
                            <input type="radio" class="btn-check" name="calendar-view" id="payment-calendar-view-day">
                            <label class="btn" for="payment-calendar-view-day"><i class="ti ti-calendar-day"></i> День</label>
                            <input type="radio" class="btn-check" name="calendar-view" id="payment-calendar-view-week" checked>
                            <label class="btn" for="payment-calendar-view-week"><i class="ti ti-calendar-week"></i> Неделя</label>
                            <input type="radio" class="btn-check" name="calendar-view" id="payment-calendar-view-month">
                            <label class="btn" for="payment-calendar-view-month"><i class="ti ti-calendar-month"></i> Месяц</label>
                        </div>
                        <a href="#" class="btn" data-bs-toggle="offcanvas" data-bs-target="#payment-calendar-filters">
                            <i class="ti ti-filter"></i> Фильтры
                        </a>
                        <a href="{{ path('payment_calendar_new', filterQuery) }}" class="btn btn-primary">
                            <i class="ti ti-plus"></i> Добавить
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="page-body" data-forecast-series="{{ forecastSeries|json_encode|e('html_attr') }}">
        <div class="container-xl">
            <div class="row g-3 mb-4">
                <div class="col-sm-6 col-lg-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <span class="avatar avatar-sm bg-success-lt text-success me-2">
                                    <i class="ti ti-wallet"></i>
                                </span>
                                <div class="text-secondary">Остаток на начало</div>
                            </div>
                            <div class="h2 mt-2">{{ forecast.openingBalance|number_format(2, '.', ' ') }} ₽</div>
                            {% if period %}
                                <div class="text-secondary">На {{ period.from|date('d.m.Y') }}</div>
                            {% else %}
                                <div class="text-secondary">Укажите период, чтобы увидеть остаток</div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <span class="avatar avatar-sm bg-info-lt text-info me-2">
                                    <i class="ti ti-trending-up"></i>
                                </span>
                                <div class="text-secondary">Прогноз на конец</div>
                            </div>
                            <div class="h2 mt-2">{{ forecast.closingForecast|number_format(2, '.', ' ') }} ₽</div>
                            {% if period %}
                                <div class="text-secondary">На {{ period.to|date('d.m.Y') }}</div>
                            {% else %}
                                <div class="text-secondary">Будет рассчитан после выбора периода</div>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 col-lg-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <span class="avatar avatar-sm bg-danger-lt text-danger me-2">
                                    <i class="ti ti-alert-octagon"></i>
                                </span>
                                <div class="text-secondary">Кассовый разрыв</div>
                            </div>
                            {% if period %}
                                {% if forecast.hasGap %}
                                    <div class="h2 mt-2 text-danger">Есть</div>
                                    <div class="text-secondary">В выбранном периоде ожидается отрицательный баланс</div>
                                {% else %}
                                    <div class="h2 mt-2 text-success">Нет</div>
                                    <div class="text-secondary">Баланс остаётся неотрицательным</div>
                                {% endif %}
                            {% else %}
                                <div class="h2 mt-2 text-secondary">—</div>
                                <div class="text-secondary">Расчёт появится после выбора периода</div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            {% set totalInflow = 0 %}
            {% set totalOutflow = 0 %}

            {% if plans is defined and plans|length == 0 %}
                <div class="card my-3">
                    <div class="card-body text-center">
                        <h3 class="mb-2">Пока нет плановых платежей</h3>
                        <p class="text-muted mb-3">Создайте первую запись, чтобы спланировать движение средств.</p>
                        <a href="{{ path('payment_calendar_new', filterQuery) }}" class="btn btn-primary">Создать плановый платёж</a>
                    </div>
                </div>
            {% endif %}

            <div class="card">
                <div class="card-header">
                    <div class="card-title">Плановые операции</div>
                    <div class="card-actions">
                        {% if period %}
                            <span class="text-secondary">{{ period.from|date('d.m.Y') }} — {{ period.to|date('d.m.Y') }}</span>
                        {% endif %}
                    </div>
                </div>
                <div class="table-responsive table-sticky-head">
                    <table class="table table-hover card-table align-middle">
                        <thead>
                        <tr>
                            <th style="width: 120px;">Дата</th>
                            <th>Категория ДДС</th>
                            <th>Контрагент</th>
                            <th class="text-end" style="width: 140px;">Сумма</th>
                            <th style="width: 160px;">Счёт</th>
                            <th style="width: 140px;">Статус</th>
                            <th>Комментарий</th>
                            <th class="w-1 text-end">Действия</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% set statusClasses = {
                            'DRAFT': 'bg-gray-lt text-body',
                            'PLANNED': 'bg-secondary text-white',
                            'APPROVED': 'bg-yellow-lt text-yellow',
                            'PAID': 'bg-lime-lt text-lime',
                            'CANCELED': 'bg-gray-lt text-body'
                        } %}
                        {% for plan in plans %}
                            {% set planType = plan.type.value %}
                            {% set amountValue = plan.amount ?? 0 %}
                            {% if planType == 'INFLOW' %}
                                {% set totalInflow = totalInflow + amountValue %}
                                {% set badgeClass = 'bg-green-lt text-green' %}
                                {% set amountClass = 'text-green' %}
                                {% set amountPrefix = '+ ' %}
                            {% elseif planType == 'OUTFLOW' %}
                                {% set totalOutflow = totalOutflow + amountValue %}
                                {% set badgeClass = 'bg-red-lt text-red' %}
                                {% set amountClass = 'text-red' %}
                                {% set amountPrefix = '− ' %}
                            {% else %}
                                {% set badgeClass = 'bg-gray-lt text-body' %}
                                {% set amountClass = '' %}
                                {% set amountPrefix = '' %}
                            {% endif %}
                            {% set status = plan.status.value %}
                            <tr>
                                <td>{{ plan.plannedAt|date('d.m.Y') }}</td>
                                <td><span class="badge {{ badgeClass }}">{{ plan.cashflowCategory.name }}</span></td>
                                <td>{{ plan.counterparty ? plan.counterparty.name : '—' }}</td>
                                <td class="text-end {{ amountClass }}">{{ amountPrefix }}{{ amountValue|number_format(2, '.', ' ') }}</td>
                                <td>{{ plan.moneyAccount ? plan.moneyAccount.name : '—' }}</td>
                                <td>
                                    {% set statusClass = statusClasses[status] ?? 'bg-secondary text-white' %}
                                    <span class="badge {{ statusClass }}">{{ status }}</span>
                                </td>
                                <td>{{ plan.comment is not empty ? plan.comment : '—' }}</td>
                                {% set allowApprove = status == 'PLANNED' %}
                                {% set allowPay = status in ['PLANNED', 'APPROVED'] %}
                                {% set allowCancel = status in ['PLANNED', 'APPROVED'] %}
                                {% set allowPostpone = status in ['PLANNED', 'APPROVED'] %}
                                <td class="text-end">
                                    <div class="btn-list justify-content-end">
                                        {% if allowApprove %}
                                            <form method="post" action="{{ path('payment_calendar_status', filterQuery|merge({'id': plan.id})) }}" class="d-inline">
                                                <input type="hidden" name="action" value="approve">
                                                <input type="hidden" name="_token" value="{{ csrf_token('payment_plan_status_' ~ plan.id) }}">
                                                <button type="submit" class="btn btn-icon" data-bs-toggle="tooltip" data-bs-placement="left" title="Одобрить">
                                                    <i class="ti ti-checks"></i>
                                                </button>
                                            </form>
                                        {% endif %}
                                        {% if allowPay %}
                                            <form method="post" action="{{ path('payment_calendar_status', filterQuery|merge({'id': plan.id})) }}" class="d-inline">
                                                <input type="hidden" name="action" value="pay">
                                                <input type="hidden" name="_token" value="{{ csrf_token('payment_plan_status_' ~ plan.id) }}">
                                                <button type="submit" class="btn btn-icon" data-bs-toggle="tooltip" data-bs-placement="left" title="Отметить как оплаченный">
                                                    <i class="ti ti-cash"></i>
                                                </button>
                                            </form>
                                        {% endif %}
                                        {% if allowPostpone %}
                                            <form method="post" action="{{ path('payment_calendar_postpone', filterQuery|merge({'id': plan.id})) }}" class="d-inline">
                                                <input type="hidden" name="days" value="3">
                                                <input type="hidden" name="_token" value="{{ csrf_token('payment_plan_postpone_' ~ plan.id) }}">
                                                <button type="submit" class="btn btn-icon" data-bs-toggle="tooltip" data-bs-placement="left" title="Отложить на 3 дня">
                                                    <i class="ti ti-clock-pause"></i>
                                                </button>
                                            </form>
                                        {% endif %}
                                        {% if allowCancel %}
                                            <form method="post" action="{{ path('payment_calendar_status', filterQuery|merge({'id': plan.id})) }}" class="d-inline">
                                                <input type="hidden" name="action" value="cancel">
                                                <input type="hidden" name="_token" value="{{ csrf_token('payment_plan_status_' ~ plan.id) }}">
                                                <button type="submit" class="btn btn-icon" data-bs-toggle="tooltip" data-bs-placement="left" title="Отменить">
                                                    <i class="ti ti-x"></i>
                                                </button>
                                            </form>
                                        {% endif %}
                                        <a class="btn btn-icon" href="{{ path('payment_calendar_edit', filterQuery|merge({'id': plan.id})) }}" data-bs-toggle="tooltip" data-bs-placement="left" title="Редактировать">
                                            <i class="ti ti-pencil"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8" class="text-center text-secondary py-4">Записей не найдено</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot>
                        {% set netTotal = totalInflow - totalOutflow %}
                        {% set netClass = netTotal > 0 ? 'text-green' : (netTotal < 0 ? 'text-red' : '') %}
                        <tr>
                            <td colspan="3" class="text-end fw-bold">Итого за период:</td>
                            <td class="text-end fw-bold {{ netClass }}">
                                {% if netTotal > 0 %}+ {% elseif netTotal < 0 %}− {% endif %}{{ netTotal|abs|number_format(2, '.', ' ') }}
                            </td>
                            <td colspan="4"></td>
                        </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="offcanvas offcanvas-end" tabindex="-1" id="payment-calendar-filters" aria-labelledby="payment-calendar-filters-label">
        <div class="offcanvas-header">
            <h2 class="offcanvas-title" id="payment-calendar-filters-label">Фильтры</h2>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Закрыть"></button>
        </div>
        <div class="offcanvas-body">
            <form method="get" action="{{ path('payment_calendar_index') }}" class="d-flex flex-column gap-3">
                <div>
                    <label for="filter-from" class="form-label">С</label>
                    <input type="date" id="filter-from" name="from" class="form-control" value="{{ filters.from }}" required>
                </div>
                <div>
                    <label for="filter-to" class="form-label">По</label>
                    <input type="date" id="filter-to" name="to" class="form-control" value="{{ filters.to }}" required>
                </div>
                <div>
                    <label for="filter-account" class="form-label">Счёт</label>
                    <select id="filter-account" name="account_id" class="form-select">
                        <option value="">Все счета</option>
                        {% for account in accounts %}
                            <option value="{{ account.id }}" {% if filters.account_id == account.id %}selected{% endif %}>{{ account.name }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div>
                    <label for="filter-category" class="form-label">Категория ДДС</label>
                    <select id="filter-category" name="category_id" class="form-select">
                        <option value="">Все категории</option>
                        {% for category in categories %}
                            <option value="{{ category.id }}" {% if filters.category_id == category.id %}selected{% endif %}>{{ category.name }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div>
                    <label for="filter-status" class="form-label">Статус</label>
                    <select id="filter-status" name="status" class="form-select">
                        <option value="">Все статусы</option>
                        {% for value, label in statuses %}
                            <option value="{{ value }}" {% if filters.status == value %}selected{% endif %}>{{ label }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div>
                    <label for="filter-counterparty" class="form-label">Контрагент</label>
                    <select id="filter-counterparty" name="counterparty_id" class="form-select">
                        <option value="">Все контрагенты</option>
                        {% for counterparty in counterparties %}
                            <option value="{{ counterparty.id }}" {% if filters.counterparty_id == counterparty.id %}selected{% endif %}>{{ counterparty.name }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="d-grid gap-2 mt-2">
                    <button type="submit" class="btn btn-primary">Применить</button>
                    <a class="btn" href="{{ path('payment_calendar_index', {'from': filters.from, 'to': filters.to}) }}">Сбросить</a>
                </div>
            </form>
        </div>
    </div>

    {% if form is defined and form.vars is defined %}
        <div class="modal modal-blur fade" id="payment-plan-modal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 class="modal-title">{{ formTitle ?? 'Запись' }}</h2>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
                    </div>
                    <div class="modal-body">
                        {% include 'payment_calendar/_form.html.twig' with {form: form, filterQuery: filterQuery} %}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% if showForm is defined and showForm and form is defined and form.vars is defined %}
        <script>
            function hideFallbackModal(modalElement) {
                var activeElement = document.activeElement;
                if (activeElement && modalElement.contains(activeElement)) {
                    if (typeof activeElement.blur === 'function') {
                        activeElement.blur();
                    }

                    if (document.body && typeof document.body.focus === 'function') {
                        document.body.focus({preventScroll: true});
                    }
                }

                modalElement.classList.remove('show');
                modalElement.style.display = 'none';
                modalElement.setAttribute('aria-hidden', 'true');
                modalElement.removeAttribute('aria-modal');
            }

            function setupFallbackDismiss(modalElement) {
                var dismissButtons = modalElement.querySelectorAll('[data-bs-dismiss="modal"]');
                dismissButtons.forEach(function (button) {
                    if (button.dataset.dismissListenerAttached === 'true') {
                        return;
                    }

                    button.addEventListener('click', function (event) {
                        event.preventDefault();
                        hideFallbackModal(modalElement);
                    });

                    button.dataset.dismissListenerAttached = 'true';
                });
            }

            function showPaymentPlanModal() {
                var modalElement = document.getElementById('payment-plan-modal');
                if (!modalElement) {
                    return;
                }

                var BootstrapModal = window.bootstrap && typeof window.bootstrap.Modal === 'function'
                    ? window.bootstrap.Modal
                    : null;

                if (!BootstrapModal) {
                    modalElement.classList.add('show');
                    modalElement.style.display = 'block';
                    modalElement.removeAttribute('aria-hidden');
                    modalElement.setAttribute('aria-modal', 'true');
                    modalElement.scrollTop = 0;

                    setupFallbackDismiss(modalElement);

                    return;
                }

                var modal = BootstrapModal.getInstance(modalElement);
                if (!modal) {
                    modal = new BootstrapModal(modalElement);
                }

                modal.show();
            }

            document.addEventListener('DOMContentLoaded', showPaymentPlanModal);
            document.addEventListener('turbo:load', showPaymentPlanModal);
        </script>
    {% endif %}
{% endblock %}
