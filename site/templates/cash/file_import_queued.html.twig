{% extends 'base.html.twig' %}

{% block title %}Импорт кассы поставлен в очередь{% endblock %}

{% block body %}
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">Импорт кассовых операций поставлен в очередь</h2>
                    <div class="text-muted small">
                        Задача импорта будет обработана в фоне.
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-xl mt-3">
        <div class="card">
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-3">Job ID</dt>
                    <dd class="col-sm-9"><code>{{ jobId }}</code></dd>
                    <dt class="col-sm-3">Import Log ID</dt>
                    <dd class="col-sm-9"><code>{{ importLogId }}</code></dd>
                </dl>
                <div class="mt-3">
                    <a class="btn btn-outline-primary" href="{{ path('import_logs_index', { source: 'cash:file' }) }}">
                        Открыть журнал импортов
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
