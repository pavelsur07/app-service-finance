<form method="post">
    <div class="row g-3">
        <div class="col-12">
            <label class="form-label required" for="profile_name">Название</label>
            <input class="form-control" id="profile_name" name="name" value="{{ name }}" required>
        </div>
        <div class="col-12">
            <label class="form-label" for="profile_mapping">Маппинг (JSON)</label>
            <textarea class="form-control" id="profile_mapping" name="mapping" rows="8" placeholder='{"date":"Дата", "amount":"Сумма"}'>{{ mapping }}</textarea>
            <div class="form-hint">Оставьте пустым, чтобы использовать пустой маппинг.</div>
        </div>
        <div class="col-12">
            <label class="form-label" for="profile_options">Опции (JSON)</label>
            <textarea class="form-control" id="profile_options" name="options" rows="6" placeholder="{}">{{ options }}</textarea>
            <div class="form-hint">Оставьте пустым, чтобы использовать пустые опции.</div>
        </div>
    </div>
    <input type="hidden" name="_token" value="{{ csrf_token('cash_file_import_profile_form') }}">
    <div class="d-flex justify-content-end gap-2 mt-4">
        <a href="{{ path('cash_file_import_profile_index') }}" class="btn btn-outline-secondary">Отмена</a>
        <button class="btn btn-primary" type="submit">Сохранить</button>
    </div>
</form>
