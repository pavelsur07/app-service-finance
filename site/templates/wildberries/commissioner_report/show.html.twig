{% extends 'base.html.twig' %}
{% block title %}Отчёт комиссионера WB{% endblock %}

{% block body %}
<div class="page-header d-print-none">
  <div class="container-xl">
    <div class="row g-2 align-items-center">
      <div class="col">
        <h2 class="page-title">Отчёт комиссионера WB</h2>
        <div class="text-secondary mt-1">Карточка загрузки, проверка формата и переход к маппингу.</div>
      </div>
      <div class="col-auto ms-auto">
        <form class="d-inline" method="post" action="{{ path('wb_commissioner_reports_process', {id: report.id}) }}">
          <input type="hidden" name="_token" value="{{ csrf_token('wb_commissioner_report_process' ~ report.id) }}">
          <button class="btn btn-primary">
            <i class="ti ti-player-play me-1"></i>{{ report.status == 'processed' ? 'Пересчитать' : 'Обработать' }}
          </button>
        </form>
        <a class="btn btn-outline-primary" href="{{ path('wb_report_detail_mapping_index', {importId: report.id}) }}">
          <i class="ti ti-settings me-1"></i>Открыть маппинг
        </a>
        <form class="d-inline" method="post" action="{{ path('wb_report_detail_mapping_create_document') }}">
          <input type="hidden" name="_token" value="{{ csrf_token('wb_report_detail_mapping_create_document') }}">
          <input type="hidden" name="from" value="{{ report.periodStart|date('Y-m-d') }}">
          <input type="hidden" name="to" value="{{ report.periodEnd|date('Y-m-d') }}">
          <button class="btn btn-success" {% if hasUnmapped %}disabled aria-disabled="true"{% endif %}>
            <i class="ti ti-report-money me-1"></i>Создать ОПиУ за период
          </button>
          {% if hasUnmapped %}
            <span class="text-warning ms-2">Закрой unmapped в маппинге</span>
          {% endif %}
        </form>
        <a class="btn btn-outline-secondary" href="{{ path('wb_commissioner_reports_index') }}">
          <i class="ti ti-arrow-left me-1"></i>К списку
        </a>
      </div>
    </div>
  </div>
</div>

<div class="page-body">
  <div class="container-xl">
    <div class="card">
      <div class="card-body">
        <div class="row g-3">
          <div class="col-md-6">
            <div class="text-secondary">Период</div>
            <div>{{ report.periodStart|date('Y-m-d') }} — {{ report.periodEnd|date('Y-m-d') }}</div>
          </div>
          <div class="col-md-6">
            <div class="text-secondary">Статус</div>
            <div>{{ report.status }}</div>
          </div>
          <div class="col-md-6">
            <div class="text-secondary">Проверка формата</div>
            <div>{{ report.formatStatus ?? '—' }}</div>
          </div>
          <div class="col-md-6">
            <div class="text-secondary">Файл</div>
            <div>{{ report.originalFilename }}</div>
            <div class="text-secondary small">{{ report.storagePath }}</div>
          </div>
          <div class="col-md-6">
            <div class="text-secondary">Хэш файла</div>
            <div class="font-monospace">{{ report.fileHash }}</div>
          </div>
          <div class="col-md-6">
            <div class="text-secondary">Создан</div>
            <div>{{ report.createdAt|date('Y-m-d H:i') }}</div>
          </div>
          <div class="col-md-6">
            <div class="text-secondary">Обработан</div>
            <div>{{ report.processedAt ? report.processedAt|date('Y-m-d H:i') : '—' }}</div>
          </div>
          <div class="col-md-6">
            <div class="text-secondary">Строки</div>
            <div>{{ report.rowsParsed }}/{{ report.rowsTotal }}</div>
          </div>
          <div class="col-md-6">
            <div class="text-secondary">Ошибки / предупреждения</div>
            <div>{{ report.errorsCount }} / {{ report.warningsCount }}</div>
          </div>
        </div>
      </div>
    </div>

    <div class="card mt-3">
      <div class="card-body">
        <h3 class="card-title">Валидация формата</h3>
        <div class="row g-3">
          <div class="col-md-6">
            <div class="text-secondary">Ошибки</div>
            {% if report.errorsJson is empty %}
              <div class="text-success">Ошибок не найдено.</div>
            {% else %}
              <ul class="text-danger mb-0">
                {% for error in report.errorsJson %}
                  <li>{{ error }}</li>
                {% endfor %}
              </ul>
            {% endif %}
          </div>
          <div class="col-md-6">
            <div class="text-secondary">Предупреждения</div>
            {% if report.warningsJson is empty %}
              <div class="text-success">Предупреждений нет.</div>
            {% else %}
              <ul class="text-warning mb-0">
                {% for warning in report.warningsJson %}
                  <li>{{ warning }}</li>
                {% endfor %}
              </ul>
            {% endif %}
          </div>
        </div>
      </div>
    </div>

    <div class="card mt-3">
      <div class="card-body">
        <h3 class="card-title">Агрегация (по отчёту)</h3>
        <div class="table-responsive">
          <table class="table table-striped align-middle mb-0">
            <thead>
            <tr>
              <th>PL категория</th>
              <th class="text-end">Сумма</th>
            </tr>
            </thead>
            <tbody>
            {% for categoryId, amount in totals %}
              {% set category = categoryById[categoryId] ?? null %}
              <tr>
                <td>{{ category ? category.name : categoryId }}</td>
                <td class="text-end">{{ amount|number_format(2, '.', ' ') }}</td>
              </tr>
            {% else %}
              <tr>
                <td colspan="2" class="text-center">Нет данных для отчёта</td>
              </tr>
            {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>

    {% if unmapped is not empty %}
      <div class="card mt-3">
        <div class="card-body">
          <h3 class="card-title">Unmapped</h3>
          <div class="table-responsive">
            <table class="table table-sm align-middle mb-0">
              <thead>
              <tr>
                <th>Тип документа</th>
                <th>Обоснование</th>
                <th class="text-end">Строк</th>
              </tr>
              </thead>
              <tbody>
              {% for item in unmapped %}
                <tr>
                  <td>{{ item.docTypeName ?? '—' }}</td>
                  <td>{{ item.supplierOperName ?? '—' }}</td>
                  <td class="text-end">{{ item.rowsCount }}</td>
                </tr>
              {% endfor %}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    {% endif %}
  </div>
</div>
{% endblock %}
