{% extends 'base.html.twig' %}
{% block title %}Отчёт комиссионера WB{% endblock %}

{% block body %}
<div class="page-header d-print-none">
  <div class="container-xl">
    <div class="row g-2 align-items-center">
      <div class="col">
        <h2 class="page-title">Отчёт комиссионера WB</h2>
        <div class="text-secondary mt-1">Карточка загрузки, проверка формата и переход к маппингу.</div>
      </div>
      <div class="col-auto ms-auto">
        <form class="d-inline" method="post" action="{{ path('wb_commissioner_reports_process', {id: report.id}) }}">
          <input type="hidden" name="_token" value="{{ csrf_token('wb_commissioner_report_process' ~ report.id) }}">
          <button class="btn btn-primary">
            <i class="ti ti-player-play me-1"></i>Пересчитать
          </button>
        </form>
        <form class="d-inline" method="post" action="{{ path('wb_commissioner_reports_generate_pnl', {id: report.id}) }}">
          <input type="hidden" name="_token" value="{{ csrf_token('wb_commissioner_report_generate_pnl' ~ report.id) }}">
          <button class="btn btn-success" {% if not canCreatePnl %}disabled aria-disabled="true"{% endif %}>
            <i class="ti ti-report-money me-1"></i>Сформировать ОПиУ за период
          </button>
          {% if not canCreatePnl %}
            <span class="text-warning ms-2">
              {% if hasUnmapped %}
                Есть unmapped значения — заполни сопоставления.
              {% elseif hasMappedWithoutPlCategory %}
                Не все mapped строки имеют PL категорию.
              {% else %}
                Нет данных для формирования ОПиУ.
              {% endif %}
            </span>
          {% endif %}
        </form>
        <a class="btn btn-outline-secondary" href="{{ path('wb_commissioner_reports_index') }}">
          <i class="ti ti-arrow-left me-1"></i>К списку
        </a>
      </div>
    </div>
  </div>
</div>

<div class="page-body">
  <div class="container-xl">
    <div class="card">
      <div class="card-body">
        <div class="row g-3">
          <div class="col-md-6">
            <div class="text-secondary">Период</div>
            <div>{{ report.periodStart|date('Y-m-d') }} — {{ report.periodEnd|date('Y-m-d') }}</div>
          </div>
          <div class="col-md-6">
            <div class="text-secondary">Статус</div>
            <div>{{ report.status }}</div>
          </div>
          <div class="col-md-6">
            <div class="text-secondary">Проверка формата</div>
            <div>{{ report.formatStatus ?? '—' }}</div>
          </div>
          <div class="col-md-6">
            <div class="text-secondary">Файл</div>
            <div>{{ report.originalFilename }}</div>
            <div class="text-secondary small">{{ report.storagePath }}</div>
          </div>
          <div class="col-md-6">
            <div class="text-secondary">Хэш файла</div>
            <div class="font-monospace">{{ report.fileHash }}</div>
          </div>
          <div class="col-md-6">
            <div class="text-secondary">Создан</div>
            <div>{{ report.createdAt|date('Y-m-d H:i') }}</div>
          </div>
          <div class="col-md-6">
            <div class="text-secondary">Обработан</div>
            <div>{{ report.processedAt ? report.processedAt|date('Y-m-d H:i') : '—' }}</div>
          </div>
          <div class="col-md-6">
            <div class="text-secondary">Строки</div>
            <div>{{ report.rowsParsed }}/{{ report.rowsTotal }}</div>
          </div>
          <div class="col-md-6">
            <div class="text-secondary">Ошибки / предупреждения</div>
            <div>{{ report.errorsCount }} / {{ report.warningsCount }}</div>
          </div>
        </div>
      </div>
    </div>

    <div class="card mt-3">
      <div class="card-body">
        <h3 class="card-title">Валидация формата</h3>
        <div class="row g-3">
          <div class="col-md-6">
            <div class="text-secondary">Ошибки</div>
            {% if report.errorsJson is empty %}
              <div class="text-success">Ошибок не найдено.</div>
            {% else %}
              <ul class="text-danger mb-0">
                {% for error in report.errorsJson %}
                  <li>{{ error }}</li>
                {% endfor %}
              </ul>
            {% endif %}
          </div>
          <div class="col-md-6">
            <div class="text-secondary">Предупреждения</div>
            {% if report.warningsJson is empty %}
              <div class="text-success">Предупреждений нет.</div>
            {% else %}
              <ul class="text-warning mb-0">
                {% for warning in report.warningsJson %}
                  <li>{{ warning }}</li>
                {% endfor %}
              </ul>
            {% endif %}
          </div>
        </div>
      </div>
    </div>

    <div class="card mt-3">
      <div class="card-body">
        <h3 class="card-title">Список затрат (Mapped)</h3>
        <div class="table-responsive">
          <table class="table table-striped align-middle mb-0">
            <thead>
            <tr>
              <th>Тип затрат WB</th>
              <th class="text-end">Сумма</th>
            </tr>
            </thead>
            <tbody>
            {% for item in mappedResults %}
              <tr>
                <td>{{ item.costTypeTitle }}</td>
                <td class="text-end">{{ item.amount|number_format(2, '.', ' ') }}</td>
              </tr>
            {% else %}
              <tr>
                <td colspan="2" class="text-center">Нет данных для отчёта</td>
              </tr>
            {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="card mt-3">
      <div class="card-body">
        <h3 class="card-title">Unmapped значения</h3>
        <div class="table-responsive">
          <table class="table table-sm align-middle mb-0">
            <thead>
            <tr>
              <th>Dimension key</th>
              <th>Значение</th>
              <th class="text-end">Сумма</th>
            </tr>
            </thead>
            <tbody>
            {% for item in unmappedResults %}
              <tr>
                <td>{{ item.dimensionKey }}</td>
                <td>{{ item.dimensionValue }}</td>
                <td class="text-end">{{ item.amount|number_format(2, '.', ' ') }}</td>
              </tr>
            {% else %}
              <tr>
                <td colspan="3" class="text-center text-secondary">Нет unmapped значений</td>
              </tr>
            {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="card mt-3">
      <div class="card-body">
        <h3 class="card-title">Сопоставить новые значения</h3>
        <form id="wb-commissioner-mapping-form" method="post"
              action="{{ path('wb_commissioner_reports_mappings', {id: report.id}) }}">
          <input type="hidden" name="_token" value="{{ csrf_token('wb_commissioner_report_mappings' ~ report.id) }}">
          <div class="table-responsive">
            <table class="table table-sm align-middle mb-0">
              <thead>
              <tr>
                <th>Dimension key</th>
                <th>Значение</th>
                <th>Тип затрат</th>
                <th>PL категория</th>
                <th class="text-end">Сумма</th>
              </tr>
              </thead>
              <tbody>
              {% for item in unmappedResults %}
                {% set mapping = mappingByDimensionId[item.dimensionValueId] ?? null %}
                <tr>
                  <td>{{ item.dimensionKey }}</td>
                  <td>{{ item.dimensionValue }}</td>
                  <td>
                    <input type="hidden" name="mappings[{{ item.dimensionValueId }}][dimensionValueId]"
                           value="{{ item.dimensionValueId }}">
                    <select class="form-select form-select-sm"
                            name="mappings[{{ item.dimensionValueId }}][costTypeId]">
                      <option value="">—</option>
                      {% for costType in costTypes %}
                        <option value="{{ costType.id }}"
                                {% if mapping and mapping.costType.id == costType.id %}selected{% endif %}>
                          {{ costType.title }}
                        </option>
                      {% endfor %}
                    </select>
                  </td>
                  <td>
                    <select class="form-select form-select-sm"
                            name="mappings[{{ item.dimensionValueId }}][plCategoryId]">
                      <option value="">—</option>
                      {% for category in categoryOptions %}
                        <option value="{{ category.id }}"
                                {% if mapping and mapping.plCategory.id == category.id %}selected{% endif %}>
                          {{ category.label }}
                        </option>
                      {% endfor %}
                    </select>
                  </td>
                  <td class="text-end">{{ item.amount|number_format(2, '.', ' ') }}</td>
                </tr>
              {% else %}
                <tr>
                  <td colspan="5" class="text-center text-secondary">Новых значений для сопоставления нет</td>
                </tr>
              {% endfor %}
              </tbody>
            </table>
          </div>
          <div class="mt-3">
            <button class="btn btn-primary" type="submit" {% if unmappedResults is empty %}disabled{% endif %}>
              <i class="ti ti-device-floppy me-1"></i>Сохранить сопоставления
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{% endblock %}
