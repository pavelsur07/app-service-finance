{% extends 'base.html.twig' %}
{% block title %}WB отчёты комиссионера (XLSX){% endblock %}

{% block body %}
<div class="page-header d-print-none">
  <div class="container-xl">
    <div class="row g-2 align-items-center">
      <div class="col">
        <h2 class="page-title">WB: Отчёты комиссионера (XLSX)</h2>
        <div class="text-secondary mt-1">Список загруженных отчётов по активной компании.</div>
      </div>
      <div class="col-auto ms-auto">
        <a class="btn btn-primary" href="{{ path('wb_commissioner_reports_new') }}">
          <i class="ti ti-upload me-1"></i>Загрузить отчёт
        </a>
      </div>
    </div>
  </div>
</div>

<div class="page-body">
  <div class="container-xl">
    <div class="card">
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-vcenter table-striped mb-0">
            <thead>
              <tr>
                <th>Период</th>
                <th>Файл</th>
                <th>Статус</th>
                <th>Проверка формата</th>
                <th>Создан</th>
                <th class="text-end">Действия</th>
              </tr>
            </thead>
            <tbody>
              {% for report in reports %}
                <tr>
                  <td>
                    <div class="fw-semibold">{{ report.periodStart|date('Y-m-d') }} — {{ report.periodEnd|date('Y-m-d') }}</div>
                    <div class="text-secondary small">Строки: {{ report.rowsParsed }}/{{ report.rowsTotal }}</div>
                  </td>
                  <td>
                    {{ report.originalFilename }}
                    <div class="text-secondary small">{{ report.storagePath }}</div>
                  </td>
                  <td>
                    <div>{{ report.status }}</div>
                    {% if report.errorsCount > 0 %}
                      <span class="text-danger small">Ошибки: {{ report.errorsCount }}</span>
                    {% elseif report.warningsCount > 0 %}
                      <span class="text-warning small">Предупреждения: {{ report.warningsCount }}</span>
                    {% endif %}
                  </td>
                  <td>{{ report.formatStatus ?? '—' }}</td>
                  <td>{{ report.createdAt|date('Y-m-d H:i') }}</td>
                  <td class="text-end">
                    <div class="btn-list justify-content-end">
                      <a class="btn btn-outline-primary btn-sm" href="{{ path('wb_commissioner_reports_show', {id: report.id}) }}">
                        Открыть
                      </a>
                      <form class="d-inline" method="post" action="{{ path('wb_commissioner_reports_process', {id: report.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('wb_commissioner_report_process' ~ report.id) }}">
                        <button class="btn btn-primary btn-sm">
                          {{ report.status == 'processed' ? 'Пересчитать' : 'Обработать' }}
                        </button>
                      </form>
                    </div>
                  </td>
                </tr>
              {% else %}
                <tr>
                  <td colspan="6" class="text-secondary">Отчёты ещё не загружены.</td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
