{% extends 'base.html.twig' %}
{% block title %}Документы{% endblock %}
{#{% block breadcrumbs %}
    {% include 'partials/_breadcrumbs.html.twig' with {
        breadcrumbs: [
            {'label': 'Главная', 'path': 'app_home_index'},
            {'label': 'Финансы'},
            {'label': 'Документы'}
        ]
    } %}
{% endblock %}#}
{% block body %}
    {% set typeShortLabels = {
        'DEAL_SALE': 'Сделка',
        'PAYROLL': 'Зарплата',
        'TAXES': 'Налоги',
        'LOANS': 'Кредиты',
        'OBLIGATIONS': 'Обязательства',
        'ASSETS': 'Имущество',
        'CASH': 'Касса',
        'CASHFLOW_EXPENSE': 'Расход из ДДС',
        'OTHER': 'Прочие'
    } %}

    <div class="page-header d-print-none">
        <div class="row g-2 align-items-center">
            <div class="col">
                <h2 class="page-title">Документы</h2>
            </div>
            <div class="col-auto ms-auto d-print-none">
                <a href="{{ path('document_new') }}" class="btn btn-primary">+ Добавить документ</a>
            </div>
        </div>
    </div>
    <div class="mt-3">
        <div class="card">
            <div class="table-responsive">
                <table class="table card-table align-middle">
                    <thead>
                        <tr>
                            <th class="text-nowrap">Дата</th>
                            <th>Тип</th>
                            <th class="text-nowrap">Н док.</th>
                            <th>Контрагент</th>
                            <th class="text-end text-nowrap">Доход, ₽</th>
                            <th class="text-end text-nowrap">Расход, ₽</th>
                            <th class="text-end text-nowrap">Итог, ₽</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in items %}
                            {% set income = 0 %}
                            {% set expense = 0 %}
                            {% for op in item.operations %}
                                {% set category = op.plCategory ?? op.category ?? null %}
                                {% set flow = category ? category.flow.value : null %}
                                {% if flow == 'INCOME' %}
                                    {% set income = income + op.amount %}
                                {% elseif flow == 'EXPENSE' %}
                                    {% set expense = expense + op.amount %}
                                {% endif %}
                            {% endfor %}
                            {% set total = income - expense %}
                            <tr>
                                <td class="text-nowrap">{{ item.date|date('d.m.Y') }}</td>
                                <td>
                                    <div class="fw-semibold">{{ typeShortLabels[item.type.value] ?? item.type.label() }}</div>
                                    <div class="text-muted small">{{ item.description }}</div>
                                </td>
                                <td class="text-nowrap">{{ item.number ?: '—' }}</td>
                                <td>{{ item.counterparty ? item.counterparty.name : '—' }}</td>
                                <td class="text-end text-success text-nowrap">{{ income ? income|number_format(0, ',', ' ') : '—' }}</td>
                                <td class="text-end text-danger text-nowrap">{{ expense ? expense|number_format(0, ',', ' ') : '—' }}</td>
                                <td class="text-end fw-semibold text-nowrap">{{ total ? total|number_format(0, ',', ' ') : '—' }}</td>
                                <td class="text-end text-nowrap">
                                    <a href="{{ path('document_show', {'id': item.id}) }}" class="btn btn-sm btn-outline-secondary" title="Просмотр">
                                        <i class="ti ti-eye"></i>
                                    </a>
                                    <a href="{{ path('document_edit', {'id': item.id}) }}" class="btn btn-sm btn-outline-secondary" title="Редактировать">
                                        <i class="ti ti-pencil"></i>
                                    </a>
                                    <form method="post" action="{{ path('document_delete', {'id': item.id}) }}" class="d-inline" onsubmit="return confirm('Вы уверены?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ item.id) }}">
                                        <button class="btn btn-sm btn-outline-danger" title="Удалить">
                                            <i class="ti ti-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr><td colspan="8" class="text-center">Нет данных</td></tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="card-footer d-flex flex-column flex-md-row align-items-center gap-2">
                <form method="get" class="d-flex align-items-center gap-2">
                    <label for="document-limit" class="form-label mb-0">Показывать по</label>
                    <select id="document-limit" name="limit" class="form-select form-select-sm" onchange="this.form.submit()">
                        {% for option in [20, 30, 50] %}
                            <option value="{{ option }}" {{ option == limit ? 'selected' : '' }}>{{ option }}</option>
                        {% endfor %}
                    </select>
                    <input type="hidden" name="page" value="1">
                </form>
                <div class="ms-md-auto w-100 w-md-auto">
                    {% if pager.nbPages > 1 %}
                        <nav aria-label="Пагинация документов">
                            <ul class="pagination justify-content-end mb-0 flex-wrap">
                                <li class="page-item {{ pager.hasPreviousPage ? '' : 'disabled' }}">
                                    <a class="page-link" href="{{ path('document_index', {'page': pager.hasPreviousPage ? pager.previousPage : pager.currentPage, 'limit': limit}) }}">Назад</a>
                                </li>

                                {% for pageNumber in 1..pager.nbPages %}
                                    <li class="page-item {{ pageNumber == pager.currentPage ? 'active' : '' }}">
                                        <a class="page-link" href="{{ path('document_index', {'page': pageNumber, 'limit': limit}) }}">{{ pageNumber }}</a>
                                    </li>
                                {% endfor %}

                                <li class="page-item {{ pager.hasNextPage ? '' : 'disabled' }}">
                                    <a class="page-link" href="{{ path('document_index', {'page': pager.hasNextPage ? pager.nextPage : pager.currentPage, 'limit': limit}) }}">Вперёд</a>
                                </li>
                            </ul>
                        </nav>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
