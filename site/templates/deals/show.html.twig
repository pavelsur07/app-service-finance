{% extends 'base.html.twig' %}

{% block title %}Сделка {{ deal.number }}{% endblock %}

{% block content %}
<div class="d-flex align-items-center gap-2 flex-wrap mb-3">
    <h2 class="page-title mb-0">Сделка {{ deal.number }}</h2>
    <div class="ms-auto d-print-none">
        <a href="{{ path('deal_index') }}" class="btn btn-outline-secondary">К списку</a>
        {% if deal.isDraft %}
            <form method="post" action="{{ path('deal_confirm', {id: deal.id}) }}" class="d-inline">
                <input type="hidden" name="_token" value="{{ csrf_token('deal_confirm' ~ deal.id) }}">
                <button type="submit" class="btn btn-success">Подтвердить</button>
            </form>
            <form method="post" action="{{ path('deal_cancel', {id: deal.id}) }}" class="d-inline">
                <input type="hidden" name="_token" value="{{ csrf_token('deal_cancel' ~ deal.id) }}">
                <button type="submit" class="btn btn-outline-danger">Отменить</button>
            </form>
        {% elseif deal.isConfirmed %}
            <form method="post" action="{{ path('deal_cancel', {id: deal.id}) }}" class="d-inline">
                <input type="hidden" name="_token" value="{{ csrf_token('deal_cancel' ~ deal.id) }}">
                <button type="submit" class="btn btn-outline-danger">Отменить</button>
            </form>
        {% endif %}
    </div>
</div>

<div class="card mb-4">
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <div class="text-muted">Дата признания</div>
                <div>{{ deal.recognizedAt ? deal.recognizedAt|date('d.m.Y') : '—' }}</div>
            </div>
            <div class="col-md-4">
                <div class="text-muted">Канал</div>
                <div>{{ deal.channel.value }}</div>
            </div>
            <div class="col-md-4">
                <div class="text-muted">Статус</div>
                <div>{{ deal.status.value }}</div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-4">
                <div class="text-muted">Сумма</div>
                <div>{{ deal.totalAmount|number_format(2, ',', ' ') }}</div>
            </div>
            <div class="col-md-4">
                <div class="text-muted">Прямые расходы</div>
                <div>{{ deal.totalDirectCost|number_format(2, ',', ' ') }}</div>
            </div>
            <div class="col-md-4">
                <div class="text-muted">Маржа</div>
                <div>{{ (deal.totalAmount - deal.totalDirectCost)|number_format(2, ',', ' ') }}</div>
            </div>
        </div>
        <div class="mt-3">
            <div class="text-muted">Название</div>
            <div>{{ deal.title ?: '—' }}</div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Позиции</h3>
                <div class="table-responsive mb-3">
                    <table class="table table-vcenter">
                        <thead>
                            <tr>
                                <th>Наименование</th>
                                <th>Кол-во</th>
                                <th>Цена</th>
                                <th class="text-end">Сумма</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for item in deal.items %}
                            <tr>
                                <td>{{ item.name }}</td>
                                <td>{{ item.qty }}</td>
                                <td>{{ item.price|number_format(2, ',', ' ') }}</td>
                                <td class="text-end">{{ item.amount|number_format(2, ',', ' ') }}</td>
                                <td class="text-end">
                                    <form method="post" action="{{ path('deal_item_remove', {id: deal.id, itemId: item.id}) }}">
                                        <input type="hidden" name="_token" value="{{ csrf_token('deal_item_remove' ~ item.id) }}">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Удалить</button>
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center text-muted">Пока нет позиций.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

                {{ form_start(itemForm, {action: path('deal_item_add', {id: deal.id})}) }}
                    {{ form_row(itemForm.productId) }}
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(itemForm.qty) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(itemForm.price) }}
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Добавить позицию</button>
                {{ form_end(itemForm) }}
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card mb-4">
            <div class="card-body">
                <h3 class="card-title">Прямые расходы</h3>
                <div class="table-responsive mb-3">
                    <table class="table table-vcenter">
                        <thead>
                            <tr>
                                <th>Тип</th>
                                <th>Дата</th>
                                <th class="text-end">Сумма</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for charge in deal.charges %}
                            <tr>
                                <td>{{ charge.chargeType.name }}</td>
                                <td>{{ charge.recognizedAt|date('d.m.Y') }}</td>
                                <td class="text-end">{{ charge.amount|number_format(2, ',', ' ') }}</td>
                                <td class="text-end">
                                    <form method="post" action="{{ path('deal_charge_remove', {id: deal.id, chargeId: charge.id}) }}">
                                        <input type="hidden" name="_token" value="{{ csrf_token('deal_charge_remove' ~ charge.id) }}">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Удалить</button>
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" class="text-center text-muted">Пока нет расходов.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

                {{ form_start(chargeForm, {action: path('deal_charge_add', {id: deal.id})}) }}
                    {{ form_row(chargeForm.chargeTypeId) }}
                    {{ form_row(chargeForm.recognizedAt) }}
                    {{ form_row(chargeForm.amount) }}
                    {{ form_row(chargeForm.comment) }}
                    <button type="submit" class="btn btn-primary">Добавить расход</button>
                {{ form_end(chargeForm) }}
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Корректировки</h3>
                <div class="table-responsive mb-3">
                    <table class="table table-vcenter">
                        <thead>
                            <tr>
                                <th>Тип</th>
                                <th>Дата</th>
                                <th class="text-end">Сумма</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for adjustment in deal.adjustments %}
                            <tr>
                                <td>{{ adjustment.type.value }}</td>
                                <td>{{ adjustment.recognizedAt|date('d.m.Y') }}</td>
                                <td class="text-end">{{ adjustment.amount|number_format(2, ',', ' ') }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="3" class="text-center text-muted">Пока нет корректировок.</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

                {{ form_start(adjustmentForm, {action: path('deal_adjustment_add', {id: deal.id})}) }}
                    {{ form_row(adjustmentForm.type) }}
                    {{ form_row(adjustmentForm.recognizedAt) }}
                    {{ form_row(adjustmentForm.amount) }}
                    {{ form_row(adjustmentForm.comment) }}
                    <button type="submit" class="btn btn-primary">Добавить корректировку</button>
                {{ form_end(adjustmentForm) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
