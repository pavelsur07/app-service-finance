{% extends 'base.html.twig' %}

{% block title %}Типы начислений{% endblock %}

{% block content %}
<div class="d-flex align-items-center gap-2 flex-wrap mb-3">
    <h2 class="page-title mb-0">Типы начислений</h2>
    <div class="ms-auto d-print-none">
        <a href="{{ path('deal_charge_type_new') }}" class="btn btn-primary">Создать</a>
    </div>
</div>

<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label" for="charge-type-active">Статус</label>
                <select id="charge-type-active" name="isActive" class="form-select">
                    <option value="">Все</option>
                    <option value="1" {% if filters.isActive == '1' %}selected{% endif %}>Активные</option>
                    <option value="0" {% if filters.isActive == '0' %}selected{% endif %}>Неактивные</option>
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label" for="charge-type-limit">На странице</label>
                <select id="charge-type-limit" name="limit" class="form-select">
                    {% for option in [10, 20, 50] %}
                        <option value="{{ option }}" {% if filters.limit == option %}selected{% endif %}>{{ option }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-outline-primary">Применить</button>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="table-responsive">
        <table class="table card-table table-vcenter">
            <thead>
                <tr>
                    <th>Код</th>
                    <th>Название</th>
                    <th>Статус</th>
                    <th class="text-end">Действия</th>
                </tr>
            </thead>
            <tbody>
            {% for chargeType in chargeTypes %}
                <tr>
                    <td>{{ chargeType.code }}</td>
                    <td>{{ chargeType.name }}</td>
                    <td>
                        {% if chargeType.isActive %}
                            <span class="badge bg-green-lt">Активен</span>
                        {% else %}
                            <span class="badge bg-secondary-lt">Неактивен</span>
                        {% endif %}
                    </td>
                    <td class="text-end">
                        <div class="btn-list justify-content-end">
                            <a href="{{ path('deal_charge_type_edit', {id: chargeType.id}) }}" class="btn btn-outline-primary btn-sm">Изменить</a>
                            <form method="post" action="{{ path('deal_charge_type_toggle', {id: chargeType.id}) }}">
                                <input type="hidden" name="_token" value="{{ csrf_token('deal_charge_type_toggle' ~ chargeType.id) }}">
                                <button type="submit" class="btn btn-outline-secondary btn-sm">
                                    {{ chargeType.isActive ? 'Отключить' : 'Включить' }}
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center text-muted">Типов начислений пока нет.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="card-footer d-flex align-items-center">
        {% include 'partials/_pagerfanta.html.twig' with { pager: pager } %}
    </div>
</div>
{% endblock %}
