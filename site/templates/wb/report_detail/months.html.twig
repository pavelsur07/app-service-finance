{% extends 'base.html.twig' %}
{% block title %}Журнал импортов WB · детализация{% endblock %}

{% block body %}
<div class="page-header d-print-none">
  <div class="container-xl">
    <div class="row g-2 align-items-center">
      <div class="col">
        <h2 class="page-title">Журнал импортов (WB · детализация)</h2>
        <div class="text-secondary">Компания: {{ company.name ?? company.id }}</div>
      </div>
      <div class="col-auto ms-auto">
        <form class="row g-2" method="get">
          <div class="col-auto">
            <label class="form-label visually-hidden" for="source-input">Источник</label>
            <input type="text" class="form-control" id="source-input" name="source" value="{{ source }}" placeholder="source">
          </div>
          <div class="col-auto">
            <label class="form-label visually-hidden" for="per-page">На странице</label>
            <input type="number" class="form-control" id="per-page" name="per_page" value="{{ per_page }}" min="6" max="24">
          </div>
          <div class="col-auto">
            <button class="btn btn-primary" type="submit">Применить</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<div class="page-body">
  <div class="container-xl">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <div>
          <strong>{{ total_groups }}</strong> групп по месяцам
        </div>
        <div class="text-secondary">Стр. {{ page }}</div>
      </div>
      <div class="table-responsive">
        <table class="table table-vcenter card-table">
          <thead>
            <tr>
              <th>Месяц</th>
              <th>Начало</th>
              <th>Окончание</th>
              <th class="text-center">Импортов</th>
              <th class="text-center">Создано</th>
              <th class="text-center">Пропущено</th>
              <th class="text-center">Ошибок</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
          {% for group in groups %}
            <tr>
              <td><strong>{{ group.ym }}</strong></td>
              <td>{{ group.started_min ? group.started_min|date('Y-m-d H:i') : '—' }}</td>
              <td>{{ group.finished_max ? group.finished_max|date('Y-m-d H:i') : '—' }}</td>
              <td class="text-center">{{ group.imports_count }}</td>
              <td class="text-center">{{ group.created_sum }}</td>
              <td class="text-center">{{ group.skipped_sum }}</td>
              <td class="text-center">{{ group.errors_sum }}</td>
              <td class="text-end">
                <a class="btn btn-sm btn-primary" href="{{ path('wb_report_detail_month_show', {'ym': group.ym, 'source': source, 'per_page': per_page}) }}">Открыть</a>
              </td>
            </tr>
          {% else %}
            <tr>
              <td colspan="8" class="text-secondary">Группы не найдены.</td>
            </tr>
          {% endfor %}
          </tbody>
        </table>
      </div>

      {% set pages = total_groups ? (total_groups / per_page)|round(0, 'ceil') : 1 %}
      {% if pages > 1 %}
        <div class="card-footer d-flex align-items-center">
          <p class="m-0 text-secondary">Показано {{ groups|length }} из {{ total_groups }}</p>
          <ul class="pagination m-0 ms-auto">
            <li class="page-item {{ page <= 1 ? 'disabled' : '' }}">
              <a class="page-link" href="{{ path('wb_report_detail_months', {'page': page > 1 ? page - 1 : 1, 'per_page': per_page, 'source': source}) }}" tabindex="-1" aria-disabled="{{ page <= 1 ? 'true' : 'false' }}">Назад</a>
            </li>
            <li class="page-item {{ page >= pages ? 'disabled' : '' }}">
              <a class="page-link" href="{{ path('wb_report_detail_months', {'page': page < pages ? page + 1 : pages, 'per_page': per_page, 'source': source}) }}">Вперёд</a>
            </li>
          </ul>
        </div>
      {% endif %}
    </div>
  </div>
</div>
{% endblock %}
