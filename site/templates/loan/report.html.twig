{% extends 'base.html.twig' %}
{% block title %}Отчёт по кредитам{% endblock %}

{% block body %}
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">Отчёт по кредитам за {{ year }} год</h2>
                </div>
                <div class="col-auto ms-auto d-print-none">
                    <div class="btn-list">
                        <a href="{{ path('loan_index') }}" class="btn btn-outline-secondary btn-sm">К списку займов</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="page-body">
        <div class="container-xl">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-vcenter">
                            <thead>
                            <tr>
                                <th>Название кредита</th>
                                <th class="text-end">Остаток долга</th>
                                <th class="text-end">Сумма займа</th>
                                <th class="text-end">Ставка, %</th>
                                <th class="text-end">Следующий платёж</th>
                                <th class="text-end">Всего процентов за год</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for loan in loansReport %}
                                <tr>
                                    <td>{{ loan.name }}</td>
                                    <td class="text-end">{{ loan.remainingPrincipal|number_format(2, '.', ' ') }}</td>
                                    <td class="text-end">{{ loan.principalAmount|number_format(2, '.', ' ') }}</td>
                                    <td class="text-end">
                                        {% if loan.interestRate is not null %}
                                            {{ loan.interestRate|number_format(2, '.', ' ') }}%
                                        {% else %}
                                            -
                                        {% endif %}
                                    </td>
                                    <td class="text-end">
                                        {% if loan.nextPaymentDate is not null and loan.nextPaymentAmount is not null %}
                                            {{ loan.nextPaymentDate|date('d.m.Y') }} — {{ loan.nextPaymentAmount|number_format(2, '.', ' ') }}
                                        {% else %}
                                            —
                                        {% endif %}
                                    </td>
                                    <td class="text-end">{{ loan.totalInterestYear|number_format(2, '.', ' ') }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6" class="text-center text-muted">Нет данных по займам</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
