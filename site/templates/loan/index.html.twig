{% extends 'base.html.twig' %}
{% block title %}Займы{% endblock %}

{% block body %}
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">Займы</h2>
                </div>
                <div class="col-auto ms-auto d-print-none">
                    <div class="btn-list">
                        <a href="{{ path('loan_report') }}" class="btn btn-outline-secondary btn-sm">Отчёт</a>
                        <a href="{{ path('loan_create') }}" class="btn btn-primary">
                            + Новый займ
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="page-body">
        <div class="container-xl">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-vcenter">
                            <thead>
                            <tr>
                                <th>Название</th>
                                <th>Кредитор</th>
                                <th class="text-end">Сумма</th>
                                <th class="text-end">Остаток</th>
                                <th class="text-end">Ставка</th>
                                <th>Начало</th>
                                <th>Окончание</th>
                                <th class="text-center">День платежа</th>
                                <th>Статус</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for loan in loans %}
                                <tr>
                                    <td>{{ loan.name }}</td>
                                    <td>{{ loan.lenderName ?? '-' }}</td>
                                    <td class="text-end">{{ loan.principalAmount|number_format(2, '.', ' ') }}</td>
                                    <td class="text-end">{{ loan.remainingPrincipal|number_format(2, '.', ' ') }}</td>
                                    <td class="text-end">
                                        {% if loan.interestRate is not null %}
                                            {{ loan.interestRate|number_format(2, '.', ' ') }}%
                                        {% else %}
                                            -
                                        {% endif %}
                                    </td>
                                    <td>{{ loan.startDate ? loan.startDate|date('d.m.Y') : '-' }}</td>
                                    <td>{{ loan.endDate ? loan.endDate|date('d.m.Y') : '-' }}</td>
                                    <td class="text-center">{{ loan.paymentDayOfMonth ?? '-' }}</td>
                                    <td>{{ loan.status }}</td>
                                    <td class="text-end">
                                        <a href="{{ path('loan_edit', {id: loan.id}) }}" class="btn btn-sm btn-outline-primary">✏️</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="10" class="text-center text-muted">Нет займов</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
