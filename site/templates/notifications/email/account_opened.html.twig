{% extends 'notifications/email/base.html.twig' %}

{% set subject = subject ?? 'ФинПлан — аккаунт создан' %}
{% set preheader = preheader ?? ('Аккаунт создан для: ' ~ company_name) %}
{% set app_name = app_name ?? 'FinPlan' %}

{% block content %}
  <h2 style="margin-top:0;">Ваш аккаунт создан</h2>
  <p>Компания: <strong>{{ company_name }}</strong></p>
  <p>ID компании: <strong>{{ company_id }}</strong></p>
  {% if company_slug %}
    <p>Адрес компании (slug): <strong>{{ company_slug }}</strong></p>
  {% endif %}

  {# Пример CTA (опционально, если есть URL) #}
  {% if dashboard_url is defined and dashboard_url %}
    <p style="margin-top:16px;">
      <a class="cta" href="{{ dashboard_url }}">Открыть дашборд</a>
    </p>
  {% endif %}
{% endblock %}
