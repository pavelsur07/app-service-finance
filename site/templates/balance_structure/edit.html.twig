{% extends 'base.html.twig' %}
{% block title %}Редактирование категории баланса{% endblock %}

{% block body %}
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">Редактирование: {{ item.name }}</h2>
                </div>
                <div class="col-auto ms-auto d-print-none">
                    <a href="{{ path('balance_structure_index') }}" class="btn btn-link">Назад</a>
                </div>
            </div>
        </div>
    </div>

    <div class="container-xl mt-3">
        <div class="card mb-3">
            <div class="card-body">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <div class="mt-3">
                    <button class="btn btn-primary" type="submit">Сохранить</button>
                    <a href="{{ path('balance_structure_index') }}" class="btn btn-link">Отмена</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Источник суммы (MVP)</h3>
            </div>
            <div class="card-body">
                {% if links|length > 0 %}
                    <ul class="list-group list-group-flush mb-3">
                        {% for link in links %}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span>{{ link.sourceType.value }}</span>
                                <span class="badge bg-secondary">{{ link.sourceId ?? 'Общий' }}</span>
                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <p class="text-muted">Пока нет привязок.</p>
                {% endif %}

                <div class="d-flex flex-wrap gap-2">
                    <form method="post" action="{{ path('balance_structure_link_money_accounts_total', {'id': item.id}) }}" class="d-inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('link_money_accounts_total' ~ item.id) }}">
                        <button class="btn btn-outline-primary" type="submit">Привязать: Деньги (все счета)</button>
                    </form>
                    <form method="post" action="{{ path('balance_structure_link_money_funds_total', {'id': item.id}) }}" class="d-inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('link_money_funds_total' ~ item.id) }}">
                        <button class="btn btn-outline-primary" type="submit">Привязать: Фонды (все фонды)</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
