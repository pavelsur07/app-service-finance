{% set labelClassMap = {
    'error': 'danger',
    'notice': 'info',
    'alert': 'warning',
} %}

{% set flashMessages = [] %}
{% for label, messages in app.flashes %}
    {% set bootstrapLabel = labelClassMap[label]|default(label) %}
    {% for message in messages %}
        {% set flashMessages = flashMessages|merge([{ type: bootstrapLabel, message: message }]) %}
    {% endfor %}
{% endfor %}

{% if flashMessages is not empty %}
    <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1090;">
        {% for flash in flashMessages %}
            <div class="toast text-bg-{{ flash.type }}" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="5000" data-bs-autohide="true">
                <div class="toast-body d-flex align-items-center gap-2">
                    <span class="toast-icon">
                        {% if flash.type == 'success' %}
                            <i class="ti ti-check"></i>
                        {% elseif flash.type == 'danger' %}
                            <i class="ti ti-alert-circle"></i>
                        {% elseif flash.type == 'warning' %}
                            <i class="ti ti-alert-triangle"></i>
                        {% elseif flash.type == 'info' %}
                            <i class="ti ti-info-circle"></i>
                        {% else %}
                            <i class="ti ti-bell"></i>
                        {% endif %}
                    </span>
                    <span>{{ flash.message }}</span>
                    <button type="button" class="btn-close btn-close-white ms-auto" data-bs-dismiss="toast" aria-label="Закрыть"></button>
                </div>
            </div>
        {% endfor %}
    </div>

    <script>
        function showFlashToasts() {
            var BootstrapToast = window.bootstrap && typeof window.bootstrap.Toast === 'function'
                ? window.bootstrap.Toast
                : null;

            function hideToastFallback(toastEl) {
                toastEl.classList.remove('show');
                toastEl.classList.add('hide');
                toastEl.style.display = 'none';
                toastEl.setAttribute('aria-hidden', 'true');
                toastEl.removeAttribute('aria-live');
            }

            document.querySelectorAll('.toast[data-bs-autohide]').forEach(function (toastEl) {
                if (!BootstrapToast) {
                    toastEl.classList.add('show');
                    toastEl.style.display = 'block';
                    toastEl.setAttribute('aria-hidden', 'false');
                    toastEl.setAttribute('aria-live', 'assertive');

                    var delayAttr = toastEl.getAttribute('data-bs-delay');
                    var delay = parseInt(delayAttr, 10);
                    if (!Number.isFinite(delay) || delay < 0) {
                        delay = 5000;
                    }

                    if (toastEl.getAttribute('data-bs-autohide') === 'true') {
                        window.setTimeout(function () {
                            hideToastFallback(toastEl);
                        }, delay);
                    }

                    toastEl.querySelectorAll('[data-bs-dismiss="toast"]').forEach(function (dismissButton) {
                        dismissButton.addEventListener('click', function () {
                            hideToastFallback(toastEl);
                        });
                    });

                    return;
                }

                var toast = BootstrapToast.getInstance(toastEl);
                if (!toast) {
                    toast = new BootstrapToast(toastEl);
                }

                toast.show();
            });
        }

        document.addEventListener('DOMContentLoaded', showFlashToasts);
        document.addEventListener('turbo:load', showFlashToasts);
    </script>
{% endif %}

