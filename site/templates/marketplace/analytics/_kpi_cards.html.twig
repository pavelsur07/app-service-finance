<div class="row row-deck row-cards mb-3">
    {# Виджет 1: Выручка (React) #}
    <div
        id="react-kpi-revenue"
        data-marketplace="{{ marketplace|default('all') }}"
        data-locale="{{ app.request.locale|default('ru') }}"
    ></div>

    {# Выручка #}
   {# <div class="col-sm-6 col-lg-4">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center">
