{% extends 'marketplace/layout.html.twig' %}

{% set active_tab = 'costs' %}

{% block tab_content %}
    <ul class="nav nav-tabs mb-3">
        <li class="nav-item">
            <a class="nav-link {{ mapped == 'all' ? 'active' : '' }}"
               href="{{ path('marketplace_costs_index', {'category': selectedCategoryId, 'mapped': 'all'}) }}">Все</a>
        </li>
        <li class="nav-item">
            <a class="nav-link {{ mapped == 'linked' ? 'active' : '' }}"
               href="{{ path('marketplace_costs_index', {'category': selectedCategoryId, 'mapped': 'linked'}) }}">С листингом</a>
        </li>
        <li class="nav-item">
            <a class="nav-link {{ mapped == 'general' ? 'active' : '' }}"
               href="{{ path('marketplace_costs_index', {'category': selectedCategoryId, 'mapped': 'general'}) }}">Общие</a>
        </li>
    </ul>

    <div class="card-header">
        <h3 class="card-title">Фильтр</h3>
    </div>
    <div class="card-body border-bottom">
        <form method="get" action="{{ path('marketplace_costs_index') }}" class="row g-3">
            <input type="hidden" name="mapped" value="{{ mapped }}">
            <div class="col-md-4">
                <label class="form-label">Категория</label>
                <select name="category" class="form-select" onchange="this.form.submit()">
                    <option value="">Все категории</option>
                    {% for category in categories %}
                        <option value="{{ category.id }}" {{ selectedCategoryId == category.id ? 'selected' : '' }}>
                            {{ category.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-md-2 d-flex align-items-end">
                {% if selectedCategoryId %}
                    <a href="{{ path('marketplace_costs_index') }}" class="btn btn-outline-secondary">
                        Сбросить
                    </a>
                {% endif %}
            </div>
        </form>
    </div>

    <div class="table-responsive">
        <table class="table card-table table-vcenter">
            <thead>
            <tr>
                <th>Дата</th>
                <th>Категория</th>
                <th>Товар</th>
                <th class="text-end">Сумма</th>
                <th>Описание</th>
                <th>ID</th>
            </tr>
            </thead>
            <tbody>
            {% if pager.nbResults == 0 %}
                <tr>
                    <td colspan="6" class="text-center text-muted py-4">
                        <div class="empty">
                            <div class="empty-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M17 8v-3a1 1 0 0 0 -1 -1h-10a2 2 0 0 0 0 4h12a1 1 0 0 1 1 1v3m0 4v3a1 1 0 0 1 -1 1h-12a2 2 0 0 1 -2 -2v-12" /><path d="M20 12v4h-4a2 2 0 0 1 0 -4h4" /></svg>
                            </div>
                            <p class="empty-title">Нет данных о затратах</p>
                            <p class="empty-subtitle text-muted">Затраты появятся после обработки данных</p>
                        </div>
                    </td>
                </tr>
            {% else %}
                {% for cost in pager.currentPageResults %}
                    <tr>
                        <td>{{ cost.costDate|date('d.m.Y') }}</td>
                        <td><span class="badge bg-purple-lt">{{ cost.category.name }}</span></td>
                        <td>
                            {% if cost.listing %}
                                <div class="fw-semibold">{{ cost.listing.name ?? ('WB #' ~ cost.listing.marketplaceSku) }}</div>
                                <div class="text-muted small">
                                    nm_id: {{ cost.listing.marketplaceSku }},
                                    size: {{ cost.listing.size }}
                                </div>
                            {% else %}
                                <span class="text-muted">Общие затраты</span>
                            {% endif %}

                            {% set sync = cost.rawData._sync ?? null %}
                            {% if sync %}
                                <div class="text-muted small">
                                    sync: nm_id={{ sync.nm_id ?? '-' }}, ts_name={{ sync.ts_name ?? '-' }}, barcode={{ sync.barcode ?? '-' }}
                                </div>
                            {% endif %}
                        </td>
                        <td class="text-end text-danger">
                            <strong>-{{ cost.amount|number_format(2, '.', ' ') }} ₽</strong>
                        </td>
                        <td>
                            {% if cost.description %}
                                <small class="text-muted">{{ cost.description }}</small>
                            {% else %}
                                <span class="text-muted">—</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if cost.externalId %}
                                <small class="text-muted">{{ cost.externalId|slice(0, 15) }}...</small>
                            {% else %}
                                <span class="text-muted">—</span>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            {% endif %}
            </tbody>
            {% if pager.nbResults > 0 %}
                <tfoot>
                <tr>
                    <th colspan="3">На странице:</th>
                    <th class="text-end text-danger">
                        <strong>-{{ pager.currentPageResults|reduce((carry, c) => carry + c.amount, 0)|number_format(2, '.', ' ') }} ₽</strong>
                    </th>
                    <th colspan="2"></th>
                </tr>
                </tfoot>
            {% endif %}
        </table>
    </div>
    {% if pager.haveToPaginate %}
        <div class="card-footer d-flex align-items-center">
            {% include 'partials/_pagerfanta.html.twig' with {
                'pager': pager,
                'route': 'marketplace_costs_index',
                'params': {
                    'category': selectedCategoryId,
                    'mapped': mapped
                }
            } %}
        </div>
    {% endif %}
{% endblock %}
