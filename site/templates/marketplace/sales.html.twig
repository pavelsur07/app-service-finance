{% extends 'base.html.twig' %}

{% block title %}Продажи{% endblock %}

{% block body %}
    <div class="page-header d-print-none">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col">
                    <h2 class="page-title">Продажи Wildberries</h2>
                </div>
                <div class="col-auto">
                    <a href="{{ path('marketplace_index') }}" class="btn">
                        ← Назад к интеграциям
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="page-body">
        <div class="container-xl">
            <div class="card">
                <div class="table-responsive">
                    <table class="table card-table table-vcenter">
                        <thead>
                        <tr>
                            <th>Дата продажи</th>
                            <th>Артикул (SKU)</th>
                            <th>Товар</th>
                            <th class="text-end">Кол-во</th>
                            <th class="text-end">Цена</th>
                            <th class="text-end">Выручка</th>
                            <th>ID заказа</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% if sales is empty %}
                            <tr>
                                <td colspan="7" class="text-center text-muted">
                                    Нет данных о продажах
                                </td>
                            </tr>
                        {% else %}
                            {% for sale in sales %}
                                <tr>
                                    <td>
                                        {{ sale.saleDate|date('d.m.Y H:i') }}
                                    </td>
                                    <td>
                                        <span class="badge bg-azure-lt">{{ sale.listing.marketplaceSku }}</span>
                                    </td>
                                    <td>
                                        {{ sale.product.name }}
                                    </td>
                                    <td class="text-end">
                                        {{ sale.quantity }}
                                    </td>
                                    <td class="text-end">
                                        {{ sale.pricePerUnit|number_format(2, '.', ' ') }} ₽
                                    </td>
                                    <td class="text-end">
                                        <strong>{{ sale.totalRevenue|number_format(2, '.', ' ') }} ₽</strong>
                                    </td>
                                    <td>
                                        <small class="text-muted">{{ sale.externalOrderId|slice(0, 20) }}...</small>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% endif %}
                        </tbody>
                        {% if sales is not empty %}
                            <tfoot>
                            <tr>
                                <th colspan="3">Итого:</th>
                                <th class="text-end">{{ sales|reduce((carry, s) => carry + s.quantity, 0) }}</th>
                                <th></th>
                                <th class="text-end">
                                    <strong>{{ sales|reduce((carry, s) => carry + s.totalRevenue, 0)|number_format(2, '.', ' ') }} ₽</strong>
                                </th>
                                <th></th>
                            </tr>
                            </tfoot>
                        {% endif %}
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
